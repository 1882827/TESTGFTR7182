local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/MlFrvWM/BBLT81/main/BL81827TC", true))()

local window = library:AddWindow("Silence | Boost Gifter", {
    main_color = Color3.fromRGB(255, 0, 0),
    min_size = Vector2.new(505, 420),
    can_resize = false,
})

local tabPlayer = window:AddTab("Player")

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

-- Cria a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Frame principal
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 139) -- Azul escuro
frame.BorderSizePixel = 2
frame.Parent = screenGui

-- Título "Project V1"
local title = Instance.new("TextLabel")
title.Text = "Project V1"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0.33, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.Parent = frame

-- Texto "Kills:"
local killsText = Instance.new("TextLabel")
killsText.Text = "Kills:"
killsText.Font = Enum.Font.GothamBold
killsText.TextSize = 26
killsText.TextColor3 = Color3.fromRGB(255, 255, 255)
killsText.BackgroundTransparency = 1
killsText.Size = UDim2.new(1, 0, 0.33, 0)
killsText.Position = UDim2.new(0, 0, 0.33, 0)
killsText.Parent = frame

-- Texto do número de kills
local killsNumber = Instance.new("TextLabel")
killsNumber.Font = Enum.Font.GothamBold
killsNumber.TextSize = 26
killsNumber.TextColor3 = Color3.fromRGB(255, 255, 255)
killsNumber.BackgroundTransparency = 1
killsNumber.Size = UDim2.new(1, 0, 0.33, 0)
killsNumber.Position = UDim2.new(0, 0, 0.66, 0)
killsNumber.Parent = frame

-- Atualizar kills em tempo real
local leaderstats = LocalPlayer:WaitForChild("leaderstats")
local killsStat = leaderstats:WaitForChild("Kills")

local function updateKills()
    killsNumber.Text = tostring(killsStat.Value)
end

killsStat:GetPropertyChangedSignal("Value"):Connect(updateKills)
updateKills()

-- Sistema de arrastar
local dragging
local dragInput
local dragStart
local startPos

local function updateDrag(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
                               startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or 
       input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or 
       input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateDrag(input)
    end
end)
