local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/MlFrvWM/BBLT81/main/BL81827TC", true))()

local window = library:AddWindow("Silence | Boost Gifter", {
    main_color = Color3.fromRGB(255, 0, 0),
    min_size = Vector2.new(505, 420),
    can_resize = false,
})

local GifterTab = window:AddTab("Gifter")

GifterTab:AddLabel("Egg & Shake Gifter").TextSize = 20
GifterTab:AddLabel("Get on a machine for less Lag").TextSize = 17

local proteinEggLabel = GifterTab:AddLabel("Protein Eggs: 0")
proteinEggLabel.TextSize = 18

local tropicalShakeLabel = GifterTab:AddLabel("Tropical Shakes: 0")
tropicalShakeLabel.TextSize = 18

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local selectedPlayer = nil
local eggCount, shakeCount = 0, 0

local playerDropdown = GifterTab:AddDropdown("Choose Player", function(name)
    selectedPlayer = Players:FindFirstChild(name)
end)

for _, player in ipairs(Players:GetPlayers()) do
    if player ~= Players.LocalPlayer then
        playerDropdown:Add(player.Name)
    end
end

Players.PlayerAdded:Connect(function(player)
    if player ~= Players.LocalPlayer then
        playerDropdown:Add(player.Name)
    end
end)

Players.PlayerRemoving:Connect(function(player)
    playerDropdown:Remove(player.Name)
    if selectedPlayer == player then
        selectedPlayer = nil
    end
end)

GifterTab:AddTextBox("Egg Amount", function(Text)
    eggCount = tonumber(Text) or 0
end)

GifterTab:AddTextBox("Shake Amount", function(Text)
    shakeCount = tonumber(Text) or 0
end)

local function giftItems(itemName, count)
    if selectedPlayer and count and count > 0 then
        local itemFolder = Players.LocalPlayer:FindFirstChild("consumablesFolder")
        if not itemFolder then return end
        local item = itemFolder:FindFirstChild(itemName)
        if not item then return end
        for i = 1, count do
            local args = {
                "giftRequest",
                selectedPlayer,
                item
            }
            ReplicatedStorage.rEvents.giftRemote:InvokeServer(unpack(args))
            task.wait(0.1)
        end
    end
end

GifterTab:AddButton("Start Egg Gifting", function()
    giftItems("Protein Egg", eggCount)
end)

GifterTab:AddButton("Start Shake Gifting", function()
    giftItems("Tropical Shake", shakeCount)
end)

local function updateItemCount()
    local proteinEggCount = 0
    local tropicalShakeCount = 0
    local backpack = Players.LocalPlayer:FindFirstChild("Backpack")
    if backpack then
        for _, item in ipairs(backpack:GetChildren()) do
            if item.Name == "Protein Egg" then
                proteinEggCount = proteinEggCount + 1
            elseif item.Name == "Tropical Shake" then
                tropicalShakeCount = tropicalShakeCount + 1
            end
        end
    end
    proteinEggLabel.Text = "Protein Eggs: " .. proteinEggCount
    tropicalShakeLabel.Text = "Tropical Shakes: " .. tropicalShakeCount
end

task.spawn(function()
    while true do
        updateItemCount()
        task.wait(5)
    end
end)
