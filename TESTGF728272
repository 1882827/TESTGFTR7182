local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/MlFrvWM/BBLT81/main/BL81827TC", true))()

local window = library:AddWindow("Silence | Boost Gifter", {
    main_color = Color3.fromRGB(255, 0, 0),
    min_size = Vector2.new(505, 420),
    can_resize = false,
})

local tabPlayer = window:AddTab("Player")

local LocalPlayer = game.Players.LocalPlayer

local autoAllEnabled = false
local sizeToSet = 0/0

local switchAll = tabPlayer:AddSwitch("Nan Size + Egg + Punch", function(bool)
    autoAllEnabled = bool
end)

task.spawn(function()
    while true do
        if autoAllEnabled then
            pcall(function()
                game:GetService("ReplicatedStorage").rEvents.changeSpeedSizeRemote:InvokeServer("changeSize", sizeToSet)
            end)

            local punch = LocalPlayer.Backpack:FindFirstChild("Punch")
            if punch then
                punch.Parent = LocalPlayer.Character
            end

            local egg = LocalPlayer.Backpack:FindFirstChild("Protein Egg")
            if egg then
                egg.Parent = LocalPlayer.Character
            end
        end
        task.wait(0.1)
    end
end)
